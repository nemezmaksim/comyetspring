<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="consoleEventLogger" class="ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="FileEventLogger"
          init-method="init">
        <constructor-arg value="target/Log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="CacheFileEventLogger"
          destroy-method="destroy"
          parent="fileEventLogger">
        <constructor-arg index="1" value="4"/>
    </bean>

    <bean id="combinedEventLogger" class="CombinedEventLogger">
        <constructor-arg>
            <list>
               <ref bean="consoleEventLogger"/>
               <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>